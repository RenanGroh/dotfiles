{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 0,
    "modules-left": [
        "cpu",
        "memory",
        "network",
        "pulseaudio",
        "tray"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "mpris",
        "custom/updates",
        "clock",
        "custom/power"
    ],

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}",
        "persistent_workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": []
        }
    },
    "tray": {
        "icon-size": 13,
        "spacing": 10
    },
    "clock": {
        "format": "ÔÄó {:%H:%M  ÔÅ≥ %d/%m}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
        "format": "Ôãõ {usage}%",
        "tooltip": false,
        "interval": 1
    },
    "memory": {
        "format": "ÔÉâ {}%"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "pavucontrol",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },
    "network": {
        "format-wifi": "Ôá´  {signalStrength}%",
        "format-ethernet": "Û∞àÄ Online",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "‚ö† Offline",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "custom/updates": {
        "format": "ÔÇ´  {}",
        "interval": 28800,                     // Checa a cada 1 hora
        "exec": "checkupdates | wc -l",       // Conta linhas de update
        "exec-if": "exit 0",                  // Sempre executa
        "on-click": "kitty -e yay -Syu",      // Clicar abre o terminal atualizando
        "signal": 8,
        "tooltip": false
    },
    // --- Widget de M√≠dia (Spotify) ---
    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ",
            "spotify": "ÔÜº"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "max-length": 45
        // "ignored-players": ["firefox"] // Descomente se quiser ignorar v√≠deos do navegador
    },
    // --- Bot√£o Power ---
    "custom/power": {
        "format": "‚èª ",
        "tooltip": false,
        "on-click": "wlogout --protocol layer-shell"
    }
}
